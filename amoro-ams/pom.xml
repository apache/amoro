                                <configuration>
                                    <inputSpec>${project.basedir}/src/main/resources/openapi/openapi.yaml</inputSpec>
                                    <generatorName>html2</generatorName>
                                    <output>${project.build.directory}/generated-docs/openapi</output>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
